<%= form_with(model: game_session) do |form| %>
  <% if game_session.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(game_session.errors.count, "error") %> prohibited this game session from being saved:</h2>

      <ul>
        <% game_session.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block", class: "title" %>
    <%= form.text_field :title, class: "input input-title", placeholder: "KakishGame" %>
  </div>

  <div>
    <%= form.label :started_at, style: "display: block", class: "title" %>
    <%= form.datetime_field :started_at, class: "input input-date", value: DateTime.now.strftime("%Y-%m-%dT%H:%M") %>
  </div>

  <div>
    <%= form.label :duration, style: "display: block", class: "title" %>
    <%= form.time_field :duration, class: "input input-duration", value: "00:00:00" %>
  </div>

  <div>
    <%= form.submit class: "button-new" %>
  </div>
<% end %>
