<p class="notice"><%= notice %></p>

<% content_for :title, "Players" %>

<h1 class='headline'>Players</h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
  <% end %>
</div>

<div>
  <%= link_to "New player", new_player_path, class: 'button-new' %>
</div>
<div class="btn-container">
  <%= link_to "Go to game sessions", game_sessions_path, class: "game-session-link" if cookies[Constants::AUTH_COOKIE]%>
</div>
<%= button_to "Logout", logout_player_path, class: 'btn-logout', method: :delete if cookies[Constants::AUTH_COOKIE]%>
