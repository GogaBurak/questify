<% content_for :title, "Players" %>
<%# binding.pry %>
<h1 class="headline"><%= I18n.t "players.title" %><%= " (#{@current_player.name})" if @current_player %></h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
  <% end %>
</div>

<div>
  <%= link_to I18n.t("players.new_player_btn"), new_player_path, class: 'button-new' %>
</div>
<div class="btn-container">
  <%= link_to I18n.t("players.game_sessions_link"), game_sessions_path, class: "game-session-link" if cookies[Constants::AUTH_COOKIE]%>
</div>
<%= button_to I18n.t("players.logout_btn"), logout_player_path, class: 'btn-logout', method: :delete if cookies[Constants::AUTH_COOKIE]%>
