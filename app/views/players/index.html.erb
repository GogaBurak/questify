<p style="color: green"><%= notice %></p>

<% content_for :title, "Players" %>

<h1>Players</h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
    <p>
      <%= link_to "Show this player", player %>
    </p>
  <% end %>
</div>

<%= link_to "New player", new_player_path %>
<%= link_to "Go to game sessions", game_sessions_path if cookies[Constants::AUTH_COOKIE]%>
<%= button_to "Logout", logout_player_path if cookies[Constants::AUTH_COOKIE]%>
